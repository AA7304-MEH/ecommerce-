# TechNova Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Google Analytics 4
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Mailchimp Configuration
MAILCHIMP_API_KEY=your_mailchimp_api_key_here-us21
MAILCHIMP_LIST_ID=your_mailchimp_list_id_here

# Zendesk Configuration
NEXT_PUBLIC_ZENDESK_KEY=your_zendesk_widget_key_here
NEXT_PUBLIC_ZENDESK_SUBDOMAIN=your_company_name

# TechNova Support Configuration
TECHNOVA_SUPPORT_EMAIL=support@technova.global
TECHNOVA_PHONE=+1-800-TECHNOVA

# AliExpress API Configuration
ALIEXPRESS_APP_KEY=your_aliexpress_app_key_here
ALIEXPRESS_APP_SECRET=your_aliexpress_app_secret_here
ALIEXPRESS_TRACKING_ID=your_aliexpress_tracking_id_here
ALIEXPRESS_API_URL=http://gw.api.taobao.com/router/rest
ALIEXPRESS_API_VERSION=2.0

# Amazon Associates API Configuration (Product Advertising API v5)
AMAZON_ACCESS_KEY_ID=your_amazon_access_key_id_here
AMAZON_SECRET_ACCESS_KEY=your_amazon_secret_access_key_here
AMAZON_ASSOCIATE_TAG=your_amazon_associate_tag_here
AMAZON_PARTNER_TAG=your_amazon_partner_tag_here
AMAZON_MARKETPLACE_ID=www.amazon.com
AMAZON_HOST=webservices.amazon.com

# Payment Gateway Configuration
NEXT_PUBLIC_RAZORPAY_KEY_ID=your_razorpay_public_key_here
RAZORPAY_KEY_SECRET=your_razorpay_private_key_here
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_public_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_private_client_secret_here

# Next.js Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Database Configuration (if using)
DATABASE_URL=your_database_url_here

# JWT Secret (for authentication)
JWT_SECRET=your_jwt_secret_here

# Email Service Configuration (for transactional emails)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password